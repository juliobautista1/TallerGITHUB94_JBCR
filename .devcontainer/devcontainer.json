{
  "name": "Maven and Docker Development Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/java:latest",
  "features": {
    "docker-in-docker": {
      "version": "latest"
    }
  },
  "postCreateCommand": "mvn --version",
  "workspaceFolder": "/workspace",
  "settings": {
    "java.home": "/usr/local/openjdk-11",
    "maven.executable.path": "/usr/bin/mvn"
  },
  "extensions": [
    "redhat.vscode-maven",
    "vscjava.vscode-java-pack"
  ],
  "remoteUser": "vscode"
}
